<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="false">
  
  <!-- 全局初始化参数 -->
  <context-parm>
  <param-name>encoding</param-name>
  <param-value>UTF-8</param-value>
  </context-parm>
  <!--  告诉tomcat ,帮我管理生命周期 -->
	<!--  
	<servlet>
		<servlet-name>HelloServlet</servlet-name>
		<servlet-class>com.source1.HelloServlet</servlet-class>
	</servlet> -->
	<!--  向外暴露一个资源目标,用于外界资源 访问   http://ip:port/contextPath/资源名称 -->
	<!--  
	<servlet-mapping>
		<servlet-name>HelloServlet</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>
	-->
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
	
	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>web.filter.CharacterEncodingFilter</filter-class>
		
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		
		<init-param>
			<param-name>force</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter> 
	<filter>
	
		<filter-name>CheckLoginFilter</filter-name>
		<filter-class>web.filter.CheckLoginFilter</filter-class>
		<!--  不受到检查的资源 -->
		<init-param>
				<param-name>unCheckUrls</param-name>
				<param-value>/login.jsp,/login,/randomcode,/logout,/images/*,/backImage</param-value>
		</init-param>
		<init-param>
				<param-name>loginPage</param-name>
				<param-value>/login.jsp</param-value>
		</init-param>
		<init-param>
				<param-name>userInSession</param-name>
				<param-value>USER_IN_SESSION</param-value>
		</init-param>
		
	</filter>
	<filter>
		<filter-name>MessageFilter</filter-name>
		<filter-class>web.filter.MessageFilter</filter-class>
	</filter>
	
	
	
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>CheckLoginFilter</filter-name>
		<url-pattern>/*</url-pattern>
		
	</filter-mapping>
	<filter-mapping>
		<filter-name>MessageFilter</filter-name>
		<url-pattern>/product</url-pattern>
	</filter-mapping>
	
	
	

</web-app>
